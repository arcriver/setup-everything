{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Setup Everything Manifest",
  "description": "Manifest schema for defining GitHub release assets and extraction patterns",
  "type": "object",
  "required": ["name", "repo", "assets", "extract_patterns"],
  "properties": {
    "$schema": {
      "type": "string",
      "description": "JSON Schema reference"
    },
    "name": {
      "type": "string",
      "description": "Optional name for the tool, used for display purposes"
    },
    "repo": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_.-]+/[a-zA-Z0-9_.-]+$",
      "description": "GitHub repository in format 'owner/name'"
    },
    "assets": {
      "type": "object",
      "description": "Platform-specific asset definitions",
      "properties": {
        "Linux": {
          "$ref": "#/definitions/platformAssets"
        },
        "Windows": {
          "$ref": "#/definitions/platformAssets"
        },
        "macOS": {
          "$ref": "#/definitions/platformAssets"
        }
      },
      "additionalProperties": false,
      "minProperties": 1
    },
    "extract_patterns": {
      "type": "array",
      "description": "List of file patterns to extract from archives",
      "items": {
        "type": "string",
        "minLength": 1
      },
      "minItems": 1,
      "uniqueItems": true
    },
    "test": {
      "type": "object",
      "description": "Test configuration for workflows",
      "properties": {
        "version": {
          "type": "string",
          "description": "Version to use for testing"
        },
        "checksums": {
          "type": "object",
          "description": "SHA256 checksums for test version by platform and architecture",
          "patternProperties": {
            "^(Linux|Windows|macOS)$": {
              "type": "object",
              "patternProperties": {
                "^(X64|X86|ARM64|ARM)$": {
                  "type": "string",
                  "pattern": "^[a-f0-9]{64}$"
                }
              },
              "additionalProperties": false
            }
          },
          "additionalProperties": false
        }
      },
      "required": ["version", "checksums"],
      "additionalProperties": false
    }
  },
  "additionalProperties": false,
  "definitions": {
    "platformAssets": {
      "type": "object",
      "description": "Architecture-specific asset filenames for a platform",
      "properties": {
        "X64": {
          "type": "string",
          "minLength": 1
        },
        "X86": {
          "type": "string",
          "minLength": 1
        },
        "ARM64": {
          "type": "string",
          "minLength": 1
        },
        "ARM": {
          "type": "string",
          "minLength": 1
        }
      },
      "additionalProperties": false,
      "minProperties": 1
    }
  }
}
